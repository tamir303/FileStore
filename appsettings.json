{
  "Database": {
    "EnableSqlServer": true,
    "SqlServerConnectionString": "Server=(localdb)\\mssqllocaldb;Database=FileManagementDb;Trusted_Connection=true;MultipleActiveResultSets=true",
    "EnableAutoMigration": true,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "MaxRetryCount": 3,
    "MaxRetryDelaySeconds": 30,
    "CommandTimeoutSeconds": 30
  },
  "MongoDb": {
    "Enabled": true,
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "FileManagement",
    "ConnectTimeoutSeconds": 30,
    "SocketTimeoutSeconds": 30,
    "MaxConnectionPoolSize": 100,
    "MinConnectionPoolSize": 5
  },
  "FileStorage": {
    "StorageType": "Local",
    "BasePath": "uploads",
    "TempPath": "temp",
    "MaxFileSizeBytes": 104857600,
    "MaxBulkSizeBytes": 524288000,
    "AllowedContentTypes": [
      "image/jpeg",
      "image/png",
      "image/gif",
      "image/webp",
      "application/pdf",
      "text/plain",
      "text/csv",
      "application/vnd.ms-excel",
      "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
      "application/msword",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
      "application/zip",
      "application/x-rar-compressed"
    ],
    "EnableCompression": true,
    "EnableVirusScanning": false,
    "CdnBaseUrl": ""
  },
  "Cache": {
    "EnableMemoryCache": true,
    "EnableRedisCache": false,
    "RedisConnectionString": "",
    "DefaultCacheDurationMinutes": 30,
    "MemoryCacheSizeLimitBytes": 104857600
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "FileUploadPolicy": {
      "PermitLimit": 10,
      "Window": "00:01:00",
      "QueueLimit": 5
    },
    "BulkUploadPolicy": {
      "PermitLimit": 3,
      "Window": "00:05:00",
      "QueueLimit": 2
    },
    "FileDownloadPolicy": {
      "PermitLimit": 50,
      "Window": "00:01:00",
      "QueueLimit": 10
    },
    "FileSearchPolicy": {
      "PermitLimit": 30,
      "Window": "00:01:00",
      "QueueLimit": 5
    }
  },
  "Security": {
    "RequireHttps": false,
    "EnableHsts": false,
    "HstsMaxAgeSeconds": 31536000,
    "EnableAntiforgery": true,
    "AllowedHosts": [ "*" ],
    "Jwt": {
      "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLong!",
      "Issuer": "FileManagementAPI",
      "Audience": "FileManagementClient",
      "ExpirationMinutes": 60,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true
    }
  },
  "Swagger": {
    "EnableSwagger": true,
    "Title": "File Management API",
    "Description": "Comprehensive API for file upload, download, and search operations with MongoDB and SQL Server support",
    "Version": "v1",
    "ContactName": "Development Team",
    "ContactEmail": "dev@company.com",
    "ContactUrl": "https://company.com/contact",
    "EnableXmlComments": true,
    "EnableJwtBearer": true,
    "JsonIgnoreProperties": []
  },
  "Cors": {
    "DefaultPolicy": {
      "AllowAnyOrigin": false,
      "AllowAnyMethod": false,
      "AllowAnyHeader": false,
      "AllowCredentials": true,
      "AllowedOrigins": [
        "http://localhost:3000",
        "http://localhost:5000",
        "https://localhost:5001"
      ],
      "AllowedMethods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS"
      ],
      "AllowedHeaders": [
        "Content-Type",
        "Authorization",
        "X-Correlation-ID",
        "X-Request-ID"
      ],
      "ExposedHeaders": [
        "X-Correlation-ID",
        "X-Request-ID",
        "X-API-Version",
        "X-RateLimit-Remaining"
      ],
      "PreflightMaxAgeMinutes": 30
    },
    "StrictPolicy": {
      "AllowAnyOrigin": false,
      "AllowAnyMethod": false,
      "AllowAnyHeader": false,
      "AllowCredentials": true,
      "AllowedOrigins": [
        "https://yourdomain.com",
        "https://app.yourdomain.com"
      ],
      "AllowedMethods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ],
      "AllowedHeaders": [
        "Content-Type",
        "Authorization"
      ],
      "ExposedHeaders": [
        "X-Correlation-ID"
      ],
      "PreflightMaxAgeMinutes": 60
    }
  },
  "Logging": {
    "MinimumLevel": "Information",
    "EnableConsoleLogging": true,
    "EnableFileLogging": true,
    "EnableStructuredLogging": false,
    "LogDirectory": "logs",
    "LogFileName": "filemanagement-.log",
    "RollingInterval": "Day",
    "RetainedFileCountLimit": 31,
    "FileSizeLimitBytes": 10485760,
    "ConsoleOutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
    "FileOutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
    "ApplicationInsightsConnectionString": "",
    "SeqServerUrl": "",
    "SeqApiKey": ""
  },
  "AllowedHosts": "*"
}