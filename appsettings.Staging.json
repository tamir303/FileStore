{
  "Database": {
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": true,
    "SqlServerConnectionString": "#{STAGING_DATABASE_CONNECTION_STRING}#"
  },
  "MongoDb": {
    "ConnectionString": "#{STAGING_MONGODB_CONNECTION_STRING}#",
    "DatabaseName": "FileManagement_Staging"
  },
  "FileStorage": {
    "BasePath": "uploads/staging",
    "TempPath": "temp/staging",
    "EnableVirusScanning": true
  },
  "Security": {
    "RequireHttps": true,
    "EnableHsts": true,
    "Jwt": {
      "SecretKey": "#{STAGING_JWT_SECRET_KEY}#",
      "ExpirationMinutes": 45
    }
  },
  "Cors": {
    "DefaultPolicy": {
      "AllowedOrigins": [
        "https://staging.yourdomain.com",
        "https://staging-app.yourdomain.com"
      ]
    }
  },
  "Swagger": {
    "EnableSwagger": true,
    "Title": "File Management API - Staging",
    "Description": "Staging environment for File Management API"
  },
  "Logging": {
    "MinimumLevel": "Information",
    "EnableConsoleLogging": true,
    "EnableFileLogging": true,
    "EnableStructuredLogging": true,
    "LogDirectory": "logs/staging",
    "ApplicationInsightsConnectionString": "#{STAGING_APPLICATION_INSIGHTS_CONNECTION_STRING}#"
  },
  "RateLimiting": {
    "FileUploadPolicy": {
      "PermitLimit": 20,
      "Window": "00:01:00"
    },
    "BulkUploadPolicy": {
      "PermitLimit": 10,
      "Window": "00:02:00"
    }
  }
}