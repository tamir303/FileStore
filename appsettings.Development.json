{
  "Database": {
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true,
    "SqlServerConnectionString": "Server=(localdb)\\mssqllocaldb;Database=FileManagementDb_Dev;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "MongoDb": {
    "DatabaseName": "FileManagement_Dev"
  },
  "FileStorage": {
    "BasePath": "uploads/dev",
    "TempPath": "temp/dev",
    "EnableVirusScanning": false
  },
  "Security": {
    "RequireHttps": false,
    "EnableHsts": false,
    "Jwt": {
      "SecretKey": "DevSecretKeyThatShouldBeAtLeast32CharactersLongForDevelopment!"
    }
  },
  "Cors": {
    "DefaultPolicy": {
      "AllowedOrigins": [
        "http://localhost:3000",
        "http://localhost:3001",
        "http://localhost:5000",
        "https://localhost:5001",
        "http://localhost:8080"
      ]
    }
  },
  "Swagger": {
    "EnableSwagger": true,
    "Title": "File Management API - Development",
    "Description": "Development environment for File Management API"
  },
  "Logging": {
    "MinimumLevel": "Debug",
    "EnableConsoleLogging": true,
    "EnableFileLogging": true,
    "EnableStructuredLogging": false,
    "LogDirectory": "logs/dev",
    "ConsoleOutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
  },
  "RateLimiting": {
    "FileUploadPolicy": {
      "PermitLimit": 100,
      "Window": "00:01:00"
    },
    "BulkUploadPolicy": {
      "PermitLimit": 50,
      "Window": "00:01:00"
    },
    "FileDownloadPolicy": {
      "PermitLimit": 1000,
      "Window": "00:01:00"
    },
    "FileSearchPolicy": {
      "PermitLimit": 500,
      "Window": "00:01:00"
    }
  }
}