{
  "Database": {
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "SqlServerConnectionString": "#{DATABASE_CONNECTION_STRING}#",
    "MaxRetryCount": 5,
    "MaxRetryDelaySeconds": 60,
    "CommandTimeoutSeconds": 60
  },
  "MongoDb": {
    "ConnectionString": "#{MONGODB_CONNECTION_STRING}#",
    "DatabaseName": "#{MONGODB_DATABASE_NAME}#",
    "MaxConnectionPoolSize": 200,
    "MinConnectionPoolSize": 10
  },
  "FileStorage": {
    "StorageType": "#{STORAGE_TYPE}#",
    "BasePath": "#{STORAGE_BASE_PATH}#",
    "TempPath": "#{STORAGE_TEMP_PATH}#",
    "EnableVirusScanning": true,
    "CdnBaseUrl": "#{CDN_BASE_URL}#"
  },
  "Cache": {
    "EnableRedisCache": true,
    "RedisConnectionString": "#{REDIS_CONNECTION_STRING}#",
    "MemoryCacheSizeLimitBytes": 268435456
  },
  "Security": {
    "RequireHttps": true,
    "EnableHsts": true,
    "HstsMaxAgeSeconds": 31536000,
    "AllowedHosts": [
      "#{ALLOWED_HOST_1}#",
      "#{ALLOWED_HOST_2}#"
    ],
    "Jwt": {
      "SecretKey": "#{JWT_SECRET_KEY}#",
      "Issuer": "#{JWT_ISSUER}#",
      "Audience": "#{JWT_AUDIENCE}#",
      "ExpirationMinutes": 30
    }
  },
  "Cors": {
    "DefaultPolicy": {
      "AllowedOrigins": [
        "#{ALLOWED_ORIGIN_1}#",
        "#{ALLOWED_ORIGIN_2}#"
      ]
    }
  },
  "Swagger": {
    "EnableSwagger": false
  },
  "Logging": {
    "MinimumLevel": "Warning",
    "EnableConsoleLogging": false,
    "EnableFileLogging": true,
    "EnableStructuredLogging": true,
    "LogDirectory": "/var/log/filemanagement",
    "RetainedFileCountLimit": 90,
    "FileSizeLimitBytes": 52428800,
    "ApplicationInsightsConnectionString": "#{APPLICATION_INSIGHTS_CONNECTION_STRING}#",
    "SeqServerUrl": "#{SEQ_SERVER_URL}#",
    "SeqApiKey": "#{SEQ_API_KEY}#"
  },
  "RateLimiting": {
    "FileUploadPolicy": {
      "PermitLimit": 5,
      "Window": "00:01:00",
      "QueueLimit": 2
    },
    "BulkUploadPolicy": {
      "PermitLimit": 2,
      "Window": "00:05:00",
      "QueueLimit": 1
    }
  }
}